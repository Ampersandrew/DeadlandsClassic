<section
  class='tab blurb scrollable {{tab.cssClass}}'
  data-group='primary'
  data-tab='blurb'
>

<h1>Description and setting</h1>

<label>{{localize "DLC.modification.Setting"}}</label>

<div>
  <label>Wasted West
    <input type="checkbox" name="system.setting.WastedWest" {{ checked system.setting.WastedWest }}/>
  </label>
</div>
<div>
  <label>Hell on Earth
    <input type="checkbox" name="system.setting.HellOnEarth" {{ checked system.setting.HellOnEarth }} />
  </label>
</div>

<div>
  <label>Lost Colony
    <input type="checkbox" name="system.setting.LostColony" {{ checked system.setting.LostColony }} />
  </label>
</div>

{{formGroup blurb.field value=blurb.value enriched=blurb.enriched height=300 toggled=true localize=true}}

</section>