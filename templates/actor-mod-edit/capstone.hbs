<section
  class='tab capstone scrollable {{tab.cssClass}}'
  data-group='primary'
  data-tab='capstone'
>
<h1>Configure </h1>

<div>
  {{localize "DLC.modificationTabConfigure.capstone"}}
</div>

<label for="StartCost">{{localize "DLC.modification.startCost"}}
  <input type="number" name="system.capstone.startCost" {{#if system.capstone.startCost includeZero=true}} value="{{system.capstone.startCost}}" {{/if}} />
</label> 

<label for="Cost">{{localize "DLC.modification.cost"}}
  <input type="number" name="system.capstone.cost" {{#if system.capstone.cost includeZero=true}} value="{{system.capstone.cost}}" {{/if}} />
</label> 

<div>
  {{formGroup capstone.field value=capstone.value enriched=capstone.enriched height=300 toggled=true localize=true}}
</div>

<hr>
</section>
