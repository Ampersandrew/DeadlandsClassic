{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true,
    "mocha": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier", "simple-import-sort"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // required for FVTT development
    "import/extensions": [
      "error",
      "always",
      {
        ".js": "always"
      }
    ],

    // TODO: HOLY SHIT THIS IS GOD AWFUL, FIND A WAY TO GET A LIST OF GLOBALS
    "no-undef": "off",

    // Cross Platform Dev
    "linebreak-style": "off",

    "indent": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],

    // simple-import-sort
    "simple-import-sort/exports": "error",
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            "^\\u0000[^.]",
            // Internal packages come last.
            "^\\w",
            "^@"
          ],
          [
            // Parent imports. Put `..` last.
            "^\\.\\.(?!/?$)",
            "^\\.\\./?$",
            // Other relative imports. Put same-folder imports and `.` last.
            "^\\./(?=.*/)(?!/?$)",
            "^\\.(?!/?$)",
            "^\\./?$",
            // With Side effect imports
            "^\\u0000\\."
          ]
        ]
      }
    ],

    // Preference
    "import/prefer-default-export": "off",

    // Annoying rules that slow dev
    "no-unused-vars": "off",

    // index.js ~ export { default } from './Module';
    "no-restricted-exports": "off"
  }
}
